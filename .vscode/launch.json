    "version": "0.2.0",
    "configurations": [
        {
            "name": "list agents",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["list", "agents"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "list agents verbose",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["list", "agents", "-v"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "install",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["install", "--all", "--force"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "install krci-ai cursor force",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["install", "--ide=cursor", "--force"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "install sync ide",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["install", "--sync-ide"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "install krci-ai go-dev",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["install", "--agent=go-dev", "--force"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "tokens go-dev agent",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["tokens", "--agent=go-dev"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "tokens all",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["tokens", "--all"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "validate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["validate"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "bundle go-dev",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["bundle", "--agent=go-dev"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "unbundle go-dev",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["unbundle", "${workspaceFolder}/.krci-ai/bundle/go-dev.md"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        },
        {
            "name": "bundle pm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/krci-ai/main.go",
            "args": ["bundle", "--agent=pm"],
            "env": {
                "KRCI_AI_PROJECT_DIR": "${workspaceFolder}"
            }
        }
    ]
}
